generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Profile   Profile[]
}

model Profile {
  id          String      @id @default(uuid())
  type        ProfileType
  name        String
  role        Role
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  accountId   String
  householdId String?
  activities  Activity[]
  account     Account     @relation(fields: [accountId], references: [id])
  household   Household?  @relation(fields: [householdId], references: [id])
  invites     Invite[]
}

model Household {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  code      String?   @unique @default(cuid())
  dogs      Dog[]
  profile   Profile[]
  invites   Invite[]
}

model Dog {
  id                  String     @id @default(uuid())
  name                String
  breed               String?
  age                 Int?
  weight              Float?
  photo               String?
  allergies           String?
  dietaryRestrictions String?
  medication          String?
  vetContact          String?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  householdId         String
  activities          Activity[]
  household           Household  @relation(fields: [householdId], references: [id])
}

model Activity {
  id           String       @id @default(uuid())
  type         ActivityType
  notes        String?
  photo        String?
  timestamp    DateTime     @default(now())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  dogId        String
  loggedById   String
  date         DateTime
  foodType     String?
  medication   String?
  portion      String?
  time         String?
  activityKind String?
  dog          Dog          @relation(fields: [dogId], references: [id])
  loggedBy     Profile      @relation(fields: [loggedById], references: [id])
}

model Invite {
  id          String    @id @default(uuid())
  code        String    @unique
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  role        Role      @default(MEMBER)
  createdById String
  createdBy   Profile   @relation(fields: [createdById], references: [id])
  expiresAt   DateTime?
  usedAt      DateTime?
  createdAt   DateTime  @default(now())

  @@index([code])
  @@index([householdId])
}

enum ProfileType {
  FAMILY
}

enum Role {
  OWNER
  MEMBER
  STAFF
}

enum ActivityType {
  MEAL
  WALK
  WATER
  MEDICATION
  PLAY
}
