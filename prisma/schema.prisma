generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ENUM 
enum ProfileType {
  FAMILY
}

enum Role {
  OWNER
  MEMBER
  STAFF
}

enum ActivityType {
  MEAL
  WALK
  MEDICATION
}

// MODELS

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  profiles  Profile[]
}
