generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

//enum 

enum ProfileType {
  FAMILY
}

enum Role {
  OWNER
  MEMBER
  STAFF
}

enum ActivityType {
  MEAL
  WALK
  WATER
  MEDICATION
}

//models

model Account {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Profile   Profile[]
}

model Profile {
  id        String      @id @default(uuid())
  type      ProfileType
  name      String
  role      Role
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  accountId String
  account   Account @relation(fields: [accountId], references: [id])

  householdId String?
  activities  Activity[]
  household   Household? @relation(fields: [householdId], references: [id])
}

model Household {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  dogs      Dog[]
  profile   Profile[]
}

model Dog {
  id                  String     @id @default(uuid())
  name                String
  breed               String?
  age                 Int?
  weight              Float?
  photo               String?
  allergies           String?
  dietaryRestrictions String?
  medication          String?
  vetContact          String?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  householdId         String
  activities          Activity[]
  household           Household  @relation(fields: [householdId], references: [id])
}

model Activity {
  id         String       @id @default(uuid())
  type       ActivityType
  notes      String?
  photo      String?
  timestamp  DateTime     @default(now())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  dogId      String
  loggedById String
  dog        Dog          @relation(fields: [dogId], references: [id])
  loggedBy   Profile      @relation(fields: [loggedById], references: [id])
}
